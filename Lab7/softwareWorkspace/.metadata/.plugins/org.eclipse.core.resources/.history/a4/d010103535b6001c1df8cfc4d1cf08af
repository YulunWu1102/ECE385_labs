#include "text_mode_vga_color.h"


void paletteTest()
{
	textVGAColorClr();
	//textVGADrawColorText ("This text should cycle through random colors", 0, 0, 0, 1);

	for (int i = 0; i < 100; i ++)
	{
		usleep (20000);
		setColorPalette(0, 	0xa, 0x0, 0xa); //set color 0 to random color;
		printf("line 20 \n");
		textVGADrawColorText ("This text should cycle through random colors", 0, 0, 0, 1);
		setColorPalette(1, 	0x0, 0x0, 0xa); //set color 1 to random color;
		printf("line 22 \n");
	}

}
